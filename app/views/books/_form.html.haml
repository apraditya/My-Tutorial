= form_for @book do |f|
  -if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    .input= f.text_field :title
  .field
    = f.label :description
    .input= f.text_field :description
  .field
    = f.label :price
    .input= f.number_field :price
  .field
    = f.label :category_id
    .input= f.number_field :category_id
  .actions
    = f.submit 'Save', class: 'btn primary'
